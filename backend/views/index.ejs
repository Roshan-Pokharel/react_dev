<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen p-6">

  <div class="max-w-3xl mx-auto">

    <h1 class="text-3xl font-bold text-gray-800 mb-6">Write the Document</h1>

    <!-- Form -->
    <form action="/submit" method="post"
      class="bg-white p-6 rounded-lg shadow-md space-y-4">

      <input 
        name="title"
        placeholder="Document name"
        class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500"
      >

      <input 
        name="details"
        placeholder="Document details"
        class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500"
      >

      <button
        type="submit"
        class="w-full bg-blue-600 text-white py-2 rounded-md font-semibold hover:bg-blue-700 transition">
        Save File
      </button>
    </form>

    <!-- Document List -->
    <div class="mt-10">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Documents</h2>

      <div class="grid md:grid-cols-3 gap-4">
        <% if (files.length > 0) { %>

          <% files.forEach(function(val) { %>
            <div class="bg-white p-4 rounded-lg shadow-md">

              <h1 class="text-lg font-bold text-gray-900 mb-2"><%= val %></h1>

              <div class="flex gap-3">

                <a 
                  href="/more/<%= val %>"
                  class="text-blue-600 hover:text-blue-800 font-medium">
                  Read More
                </a>

                <a 
                  href="/edit/<%= val %>"
                  class="text-green-600 hover:text-green-800 font-medium">
                  Edit
                </a>

              </div>
            </div>
          <% }) %>

        <% } else { %>
          <h3 class="text-gray-500 text-lg">No tasks yet.</h3>
        <% } %>
      </div>
    </div>

  </div>
</body>
</html>
